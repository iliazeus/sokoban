<UserControl x:Class="Sokoban.WpfUI.Controls.MainLayerUserControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:Sokoban.WpfUI.Controls"
>
	<ItemsControl ItemsSource="{Binding Layers[1]}">
		<ItemsControl.ItemsPanel>
			<ItemsPanelTemplate>
				<local:EvenGrid
					RowCount="{Binding FieldHeight}"
					ColumnCount="{Binding FieldWidth}"
				/>
			</ItemsPanelTemplate>
		</ItemsControl.ItemsPanel>
		<ItemsControl.ItemTemplate>
			<DataTemplate>
				<Image Name="image" />
				<DataTemplate.Triggers>
					<DataTrigger Binding="{Binding ObjectType}" Value="0">
						<Setter TargetName="image"
						        Property="Source"
						        Value="{StaticResource PlayerImage}"
						/>
					</DataTrigger>
					<DataTrigger Binding="{Binding ObjectType}" Value="1">
						<Setter TargetName="image"
						        Property="Source"
						        Value="{StaticResource BoxImage}"
						/>
					</DataTrigger>
				</DataTemplate.Triggers>
			</DataTemplate>
		</ItemsControl.ItemTemplate>
		<ItemsControl.ItemContainerStyle>
			<Style>
				<Style.Setters>
					<Setter Property="Grid.Row" Value="{Binding Row}" />
					<Setter Property="Grid.Column" Value="{Binding Column}" />
				</Style.Setters>
			</Style>
		</ItemsControl.ItemContainerStyle>
	</ItemsControl>
</UserControl>