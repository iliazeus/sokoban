<UserControl x:Class="Sokoban.WpfUI.Controls.MainLayerObjectUserControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Canvas>
		<Image Name="Image">
			<Image.Style>
				<Style TargetType="Image">
					<Style.Triggers>
						<DataTrigger Binding="{Binding ObjectType}" Value="0">
							<Setter Property="Source"
							        Value="{StaticResource PlayerImage}"
							/>
						</DataTrigger>
						<DataTrigger Binding="{Binding ObjectType}" Value="1">
							<Setter Property="Source"
							        Value="{StaticResource BoxImage}"
							/>
						</DataTrigger>
					</Style.Triggers>
				</Style>
			</Image.Style>
		</Image>
	</Canvas>
</UserControl>