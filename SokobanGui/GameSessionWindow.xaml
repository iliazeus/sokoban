<Window x:Class="SokobanGui.GameSessionWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="SokobanGui" Height="300" Width="300"
	>
	<DockPanel LastChildFill="True">
		
		<Grid DataContext="{Binding Puzzle.Metadata}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			
			<Label Grid.Row="0" Grid.Column="0" Content="Уровень:" />
			<Label Grid.Row="0" Grid.Column="1" Content="{Binding Name}" />
			<Label Grid.Row="1" Grid.Column="0" Content="Автор:" />
			<Label Grid.Row="1" Grid.Column="1" Content="{Binding AuthorName}" />
		</Grid>
	
	</DockPanel>
</Window>